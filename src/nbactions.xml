<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/</netbeans.deploy.clientUrlPart>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/</netbeans.deploy.clientUrlPart>
                <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>/</netbeans.deploy.clientUrlPart>
                <netbeans.deploy.profilemode>true</netbeans.deploy.profilemode>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>run.single.deploy</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.clientUrlPart>${webpagePath}</netbeans.deploy.clientUrlPart>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
