#!/bin/sh
# postrm script for feb
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
	if [ -f /etc/tomcat7/server.xml ]; then
		TOMCAT_CONFIG=/etc/tomcat7/server.xml
	else
		TOMCAT_CONFIG=/etc/tomcat6/server.xml
	fi


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
	# removing old configuration to avoid duplicate lines
	sed -i '/added by FEB/d' /etc/apache2/sites-enabled/000-default
	sed -i '/JkMount \/feb/d' /etc/apache2/sites-enabled/000-default
	sed -i '/added by FEB/d' ${TOMCAT_CONFIG}
	sed -i '/<Connector port="8009" protocol="AJP\/1.3"/d' ${TOMCAT_CONFIG}
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ $1 = "purge" ]; then
	echo "Purge, removing database and user"
	# restart tomcat to kill any connections to the database
	sudo service tomcat7 restart 
	# remove the database
	echo 'sudo -u postgres dropdb federacao'
	sudo -u postgres dropdb federacao
	# and the user 
	echo 'sudo -u postgres psql -c "DROP USER feb"'
	sudo -u postgres psql -c "DROP USER feb"
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0
