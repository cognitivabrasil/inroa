    <bean id="dataSource"
          class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close"
          p:driverClassName="org.postgresql.Driver"
          p:url="jdbc:postgresql://127.0.0.1:5432/federacao_teste"
          p:username="feb"
          p:password="feb@RNP" />

       <bean id="documentosDAO"
      class="feb.data.daos.DocumentosHibernateDAO"
    />
    
    <bean id="sessionFactory"
      class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="configLocation" value="classpath:hibernate.cfg.xml" />
    </bean>


    <bean id="transactionManager"
      class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <tx:annotation-driven/>

    <bean id="repositoryDAO"
       class="feb.data.daos.RepositoryHibernateDAO">
</bean>

    <bean id="subFederationDAO"
       class="feb.data.daos.SubFederacaoHibernateDAO">
    </bean>
 
    <bean id="PadraoMetadadosDAO"
        class="feb.data.daos.PadraoMetadadosHibernateDAO">
    </bean>
    
    <bean id="MapeamentoDAO"
        class="feb.data.daos.MapeamentoHibernateDAO">
    </bean>
 
    <bean id="UsuarioDAO"
        class="feb.data.daos.UsuarioHibernateDAO">
<!--         <property name="sessionFactory" ref="sessionFactory"/> -->
    </bean>

    <bean id="TokensDAO"
        class="feb.data.daos.TokensHibernateDao">
    </bean>

    <bean id="StopWord" class="feb.data.daos.StopWordHibernateDao"></bean>
    
    <bean id="visitasDao" class="feb.data.daos.VisitasHibernateDao" />
    
     <context:annotation-config/>

 
