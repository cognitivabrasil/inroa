<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="feb.data.entities.Repositorio" table="repositorios">
        <meta attribute="class-description"> 
   
        </meta>
        <id column="id" name="id" type="int">
            <generator class="sequence">
                <param name="sequence">repositorios_id_seq</param>
            </generator>  
        </id>
        <property name="nome" not-null="true" type="string"/>
        <property name="descricao" type="string"/>
        <property column="url_or_ip" name="url" not-null="true" type="string"/>
        <property column="metadata_prefix" name="metadataPrefix" not-null="true" type="string"/>
        <property column="data_ultima_atualizacao" name="ultimaAtualizacao" type="timestamp"/>
        <property column="name_space" name="namespace" type="string"/>
        <property column="periodicidade_horas" name="periodicidadeAtualizacao" type="integer"/>
        <property column="set" name="colecoesInternal" type="string"/>
        <property column="data_xml" name="dataOrigem" type="timestamp"/>
        <many-to-one class="feb.data.entities.PadraoMetadados" column="padrao_metadados" name="padraoMetadados"/>
        <many-to-one class="feb.data.entities.Mapeamento" column="mapeamento_id" name="mapeamento"/>

    
        <set name="documentos" table="documentos" cascade="all-delete-orphan">
            <key column="id_repositorio"/>
            <one-to-many class="feb.data.entities.DocumentoReal"/>
        </set>
    </class>
</hibernate-mapping>
