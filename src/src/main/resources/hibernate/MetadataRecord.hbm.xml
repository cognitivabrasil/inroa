<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="feb.data.entities.PadraoMetadados" table="padraometadados">
        <id column="id" name="id" type="int">
            <generator class="sequence">
                <param name="sequence">padraometadados_id_seq</param>
            </generator>  
        </id>
    <property name="name"  column="nome" type="string"/>
    <property name="metadataPrefix" type="string" column="metadata_prefix"/>
    <property name="namespace" type="string" column="name_space"/>
    <property name="atributos" type="string" />
    
    <set name="mapeamentos" table="mapeamentos" inverse="true" cascade="all-delete-orphan" order-by="name asc" fetch="join">
      <key column="padrao_id"/>
      <one-to-many class="feb.data.entities.Mapeamento"/>
    </set>

    
    <!--
    <set name="repositorios" table="repositorios">
      <key column="padrao_metadados"/>
      <one-to-many class="feb.data.entities.Repositorio"/>
    </set>
    -->
  </class>
</hibernate-mapping>
