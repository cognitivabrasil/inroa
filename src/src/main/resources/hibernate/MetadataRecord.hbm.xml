<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.cognitivabrasil.feb.data.entities.PadraoMetadados" table="padraometadados">
    <id column="id" name="id" type="int">
      <generator class="sequence">
        <param name="sequence">padraometadados_id_seq</param>
      </generator>
    </id>
    <property column="nome" name="name" type="string"/>
    <property column="metadata_prefix" name="metadataPrefix" type="string"/>
    <property column="name_space" name="namespace" type="string"/>
    <property name="atributos" type="string"/>
    <set cascade="all-delete-orphan" inverse="true" name="mapeamentos" order-by="name asc" table="mapeamentos">
      <key column="padrao_id"/>
      <one-to-many class="com.cognitivabrasil.feb.data.entities.Mapeamento"/>
    </set>
    <!--
    <set name="repositorios" table="repositorios">
      <key column="padrao_metadados"/>
      <one-to-many class="com.cognitivabrasil.feb.data.entities.Repositorio"/>
    </set>
    -->
  </class>
</hibernate-mapping>
