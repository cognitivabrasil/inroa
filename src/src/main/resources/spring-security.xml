<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <!-- <global-method-security pre-post-annotations="enabled" secured-annotations="enabled" -->
    <!-- jsr250-annotations="enabled" -->
    <!-- /> -->


    <http auto-config="true" use-expressions="true">
        <form-login login-page="/login.html"
                    authentication-failure-url="/login.html?error=true"
                    default-target-url="/admin/" />
        <remember-me />
        <logout logout-success-url="/" />
               
        <!-- allow any user to view (GET) the pages. Changes should only be effected 
        with POST requests -->
        <intercept-url pattern="/admin/**" method="GET"
                       access="isAuthenticated()" />
        
        <intercept-url pattern="/admin/alterDB" method="POST"
                       access="hasRole('PERM_CHANGE_DATABASE')" />

        <intercept-url pattern="/admin/repositories/*/update*"
                       method="POST" access="hasRole('PERM_UPDATE')" />

        <intercept-url pattern="/admin/repositories/**" method="POST"
                       access="hasRole('PERM_MANAGE_REP')" />
			
        <intercept-url pattern="/admin/federations/*/update*"
                       method="POST" access="hasRole('PERM_UPDATE')" />

        <intercept-url pattern="/admin/federations/**" method="POST"
                       access="hasRole('PERM_MANAGE_REP')" />
                       
        <intercept-url pattern="/admin/efetuaRecalculoIndice" method="POST"
                       access="hasRole('PERM_UPDATE')" />

        <intercept-url pattern="/admin/mapeamentos/**" method="POST"
                       access="hasRole('PERM_MANAGE_MAPPINGS')" />

        <intercept-url pattern="/admin/metadataStandard/**" method="POST"
                       access="hasRole('PERM_MANAGE_METADATA')" />

        <intercept-url pattern="/admin/users/passwd" method="POST"
                       access="isAuthenticated()" />
        
        <intercept-url pattern="/admin/users/**" method="POST"
                       access="hasRole('PERM_MANAGE_USERS')" />
        
        <intercept-url pattern="/admin/statistics/**" method="POST"
                       access="hasRole('PERM_MANAGE_STATISTICS')" />
                               
        <!-- deny all access not explicitly given -->
        <intercept-url pattern="/admin/**" access="denyAll" />


    </http>

    <beans:bean id="passwordEncoder"
                class="org.springframework.security.authentication.encoding.Md5PasswordEncoder">
    </beans:bean>

    <authentication-manager>
        <authentication-provider user-service-ref="UserService">
            <password-encoder ref="passwordEncoder" />
        </authentication-provider>
    </authentication-manager>


</beans:beans>
