<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="modelos.Repositorio" table="repositorios">
    <meta attribute="class-description"> 
   
        </meta>
    <id column="id" name="id" type="int">
      <meta attribute="scope-set">protected</meta>
      <generator class="native"/>
    </id>
    <property name="nome" not-null="true" type="string"/>
    <property name="descricao" type="string"/>
    <property column="url_or_ip" name="url" not-null="true" type="string"/>
    <property column="metadata_prefix" name="metadataPrefix" not-null="true" type="string"/>
    <property column="data_ultima_atualizacao" name="ultimaAtualizacao" type="timestamp"/>
    <property column="name_space" name="namespace" type="string"/>
    <property column="periodicidade_horas" name="periodicidadeAtualizacao" type="integer"/>
    <property column="set" name="colecoes" type="string"/>
    
    <set name="documentos" table="documentos">
      <key column="id_repositorio"/>
      <one-to-many class="modelos.DocumentoReal"/>
    </set>
  </class>
</hibernate-mapping>
